class Solution(object):
    def maxFreqSum(self, s):
        sorted_chars = sorted(s)
        vowel = int(0)
        consonant = int(0)
        v = 'a'
        con = 'b'
        maxv = int(0)
        maxc = int(0)
        for c in sorted_chars:
            if c in "aeiou" :
                if v == c:
                    vowel = vowel + 1
                    if maxv < vowel:
                        maxv = vowel
                else:
                    v = c
                    vowel = int(1)
                    if maxv < vowel :
                        maxv = vowel
            else:
                if c == con:
                    consonant = consonant + 1
                    if maxc < consonant :
                        maxc = consonant
                else:
                    con = c
                    consonant = int(1)
                    if maxc < consonant :
                        maxc = consonant
        return maxv + maxc
